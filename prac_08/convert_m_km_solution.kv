BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: '0'
            on_text: app.convert_miles_to_km()

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Label:
        text: app.output_km
        color: (1, 1, 0, 1)
